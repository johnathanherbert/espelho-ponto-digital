{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput"
  },
  "run": {
    "command": "gunicorn core.wsgi:application --bind 0.0.0.0:$PORT",
    "healthcheck": {
      "path": "/admin/login/",
      "interval": 10,
      "timeout": 5,
      "retries": 5
    }
  }
}
